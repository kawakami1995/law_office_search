<header>
  <!--ロゴ-->
  <h1 id="logo">
    <a href="/">
      <%= image_tag 'law_office_search.png', class: 'pc-logo' %><!--大きな端末用ロゴ-->
      <%= image_tag 'law_office_search.png', class: 'sh-logo' %><!--小さな端末用ロゴ-->
    </a>
  </h1>
  <!--ヘッダー中央コンテンツ-->
  <div id="header-center">
    <% if user_signed_in? %>
      <div id="user_name">
        <p class="">ユーザー:<%= @user.user_name %></p>
        <%= link_to "マイページ",account_path(id: @user.id) %>
        <%= link_to "ログアウト",destroy_user_session_path, method: :delete %>
      </div> 
    <% else %>
      <div class="headerButton login">
        <%= link_to "ログイン",new_user_session_path %>
      </div>
      <div class="headerButton newAccount">
        <%= link_to "新規登録",new_user_registration_path %>
      </div>
    <% end %>
  </div>
</header>
