<% provide(:title, "口コミ編集") %>
<h2>口コミ編集</h2>
<div class="center-form">
  <%= form_with model: @review, url: review_update_path(@review.id), method: :patch, html: {multipart: true} ,local: true do |f| %>
    <%= render "shared/error", obj: @review %> 

    <div class="field text-area">
      <%= f.text_area :review, autocomplete: "review", size: "40x10", id: "review" %>
    </div>  

    <div class="actions">
      <%= f.submit "更新"%>
    </div>
    
    <button><%= link_to "戻る", account_path(id: @review.user_id) %></button>

    <div class="field">
      <%= f.hidden_field :user_id, autofocus: true, autocomplete: "user_id", value: @review.user_id %><br>
    </div>

    <div class="field">
      <%= f.hidden_field :law_office_id, autocomplete: "law_office_id", value: @review.law_office_id %><br>
    </div>
  <% end %>
</div>
